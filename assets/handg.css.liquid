  background-repeat: repeat;
}

{%- comment -%} .nutes-header is for the image at the top of the page, below the nav bar {%- endcomment -%}
.nutes-header {
  background-image: url('https://cdn.shopify.com/s/files/1/0229/2311/6580/files/home_page_bg_32colors_v2.png?v=1635450343');
  background-size: 100% 100%;
  background-repeat: no-repeat;
	height: 40vh;
}

.handg-collection-header {
  font-size: 5em;
  text-align: center;
  color: white;
  text-shadow: 2px 3px 5px black;
}

#additives {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 1px;
}

#bases {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}


.handgproducts {
  margin: 1px 1px 1px 1px;
  border: 15px solid #464A55;
  width: 250px;
  background-image: linear-gradient(to bottom, rgb(77, 0, 0) 1%, black 70%, rgba(53,101,58, .7) 105%);
}

.imgcenter {
   display: block;
  margin-left: auto;
  margin-right: auto;
}

.titleCenter {
  text-align: center;
  color: #BEBEBE;
  font-size: 1.1em;
  border-bottom: 5px solid #464A55;
  background: black;
}

.handgh1 {
  font-size: 3em;
  color: #BEBEBE;
