{% assign sku = section.settings.product_sku %}
{% assign prod = section.settings.product %}
<section>
  <div class='build-kit'>
      <h1 style="font-size: 3vw; font-weight: bold; color: black;">{{ section.settings.title }}</h1>
      {% for option in prod.variants %}
          {% if option.sku == sku %}
              <img src='{{ option.image | img_url }}' style='width: 200px;'>
              <h3 style="" id='{{ option.price }}'>Price: {{ option.price | money }}</h3>
              <h1>{{ option.title }}</h1>
          {% endif %}
      {% endfor %}
  </div>
</section>

{% schema %}
	{
		"name": "Build A Kit",
		"tag": "div",
		"settings": [
			{	
				"id": "title",
				"type": "text",
				"label": "title"
			},
			{
				"type": "text",
				"id": "product_sku",
				"label": "Product Sku"
			},
			{
				"type": "product",
				"id": "product",
				"label": "Product"
			}
		],
		"presets": [
			{
				"category": "Product",
				"name": "Single Product",
				"settings": {}
			}
		]
	}
{% endschema %}
	
