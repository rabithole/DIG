
<div class="center" style="display: flex; flex-direction: column;">
	<h1 style="font-size: 3vw; font-weight: bold; color: black; text-align: center;">{{ section.settings.title }}</h1>

  	<h1>Total: {{ total }}</h1>
</div>

{% assign acc = 0 %}

{% for i in (1..10) %}
	{% assign acc = acc | plus: 1 %}
	{% if acc == 5 %}
		{% break %}
	{% endif %}
<p>Accumulator: --- {{ total }}</p>
{% endfor %}

{% schema %}
	{
		"name": "Kit Title",
		"tag": "aside",
		"settings": [
			{	
				"id": "title",
				"type": "text",
				"label": "Page Title"
			}
		],
		"presets": [
			{
				"category": "Product",
				"name": "Build A Kit",
				"settings": {}
			}
		]
	}
{% endschema %}
