{% assign allProduct = all_products['cloudlab-advance-grow-tents'] %}

<h1 style="text-align: center; font-size: 3vw;">{{ section.settings.title }}</h1>



<h1>Product title from variable--- {{ section.settings.title }}</h1>
<div class="center">
	<h2>Title From Section Settings: {{ section.settings.title }}</h2>
	<p>
	{% for option in allProduct.variants %}
		{% if option.sku == "720322" %}
		<p>Option: {{ option.sku }} {{ option.price | money }}</p>
		{% endif %}
	{% endfor %}
	</p>
</div>

{% schema %}
	{
		"name": "Build A Kit",
		"tag": "aside",
		"settings": [
			{
				"id": "title",
				"type": "text",
				"label": "title"
			},
			{
				"type": "image_picker",
				"id": "page_image",
				"label": "Page Image"
			},
			{
				"type": "product",
				"id": "product",
				"label": "Product"
			}
		]
	}
{% endschema %}