{% assign allProduct = all_products['cloudlab-advance-grow-tents'] %}

<div class="center" style="display: flex; flex-direction: column;">
	<h1 style="font-size: 3vw; font-weight: bold; color: black; text-align: center;">{{ section.settings.title }}</h1>
  
	{% for option in allProduct.variants %}
		{% if option.sku == "720322" %}
			<h3 style="text-align: center;">Option: {{ option.sku }} {{ option.price | money }}</h3>
  			
  			<img src='{{ option | img_url }}' style='width: 200px;'>
		{% endif %}
	{% endfor %}
</div>

{% schema %}
	{
		"name": "Build A Kit",
		"tag": "aside",
		"settings": [
			{
				"id": "title",
				"type": "text",
				"label": "title"
			},
			{
				"type": "image_picker",
				"id": "page_image",
				"label": "Page Image"
			},
			{
				"type": "product",
				"id": "product",
				"label": "Product"
			}
		]
	}
{% endschema %}