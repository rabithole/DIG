<p class='discount-page-title'>{{ section.settings.title }}</p>
<hr id='deep-discount'>

{%- comment -%}
{% assign budCandy = all_products.advanced-nutrients-bud-candy %}

<h1>PRICE: {{ budCandy.price | money_with_currency }} </h1>
<h3>Bud Candy ID: {{ budCandy.id }}</h3>

{% for product_option in budCandy.options_with_values %}

      {% for value in product_option.values %}
        {% if value == "23 Liter" %}
          	<h1>Sale On: {{ value }}s {{ budCandy.title }} Price: {{ budCandy.price | money_with_currency }} {{ budCandy.variant }}</h1>
        {% endif %}
      {% endfor %}
{% endfor %}


{% for option in budCandy.options_with_values %}
  <div class="selector-wrapper js product-form__item">
    <label {% if option.name == 'default' %}class="label--hidden" {% endif %}for="SingleOptionSelector-{{ forloop.index0 }}">
      {{ option.name }}
    </label>
    <select class="single-option-selector single-option-selector-{{ section.id }} product-form__input" id="SingleOptionSelector-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
      {% for value in option.values %}
             <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
      {% endfor %}
    </select>
  </div>
{% endfor %}

{%- endcomment -%}

{% schema %}
	{
		"name": "Document Title",
		"tag": "aside",
		"settings": [
			{
				"id": "title",
				"type": "text",
				"label": "Page Title"
			}
		]
	}
{% endschema %}

{% comment %}
{%- unless gift_wrap_in_cart -%}
    <div class="card">
      <div class="gift-wrap">
        <div class="gift-wrap__left">
          <span class="gift-wrap__icon">{% render 'icon', icon: 'bi-gift-wrap' %}</span>

          <p class="gift-wrap__text">
            <span class="text--strong">{{ section.settings.gift_wrap_text | escape }}</span>

            {%- if gift_wrap_product.price == 0 -%}
              <span>{{ 'cart.general.free' | t }}</span>
            {%- else -%}
              {%- capture gift_wrap_product_price -%}<span data-money-convertible>{{ gift_wrap_product.price | money }}</span>{%- endcapture -%}
              <span>{{ 'cart.gift_wrap.price_html' | t: price: gift_wrap_product_price }}</span>
            {%- endif -%}
          </p>
        </div>

        {%- form 'product', gift_wrap_product, class: 'gift-wrap__form' -%}
            Automatically inserted by Shop Pay Installments theme updater
          {% unless settings.disable_autogenerated_payment_terms %}
            {{ form | payment_terms }}
          {% endunless %}
            <input type="hidden" name="quantity" value="1">
            <input type="hidden" name="id" data-sku="{{ gift_wrap_product.first_available_variant.sku }}" value="{{ gift_wrap_product.first_available_variant.id }}">

            <button type="submit" class="button button--secondary" data-action="add-to-cart">{{ section.settings.gift_wrap_button | escape }}</button>
        {%- endform -%}
      </div>
    </div>
  {%- endunless -%}
{% endcomment %}